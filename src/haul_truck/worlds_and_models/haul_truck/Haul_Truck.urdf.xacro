<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="Haul Truck">
  <material name="red">
    <color rgba="0.816 0.157 0.09 1"/>
  </material>
  <material name="black">
    <color rgba="0.043 0.004 0 1"/>
  </material>
  <material name="orange">
    <color rgba="1 0.482 0.251 1" />
  </material>

  <xacro:include filename="$(find start_creating_robots)/worlds_and_models/krytn/inertial.xacro" />
  <link name="base_link" />
  <joint name="chassis_joint" type="fixed">
    <parent link="base_link" />
    <child link="chassis_link" />
  </joint>

  <!--Generated by CROSS, a ROS Workbench for FreeCAD (https://github.com/galou/freecad.cross)-->
  <link name="chassis_link">
    <visual>
      <!--Chassis/Body.-->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <mesh filename="package://haul_truck/meshes/Unnamed_Body.dae"/>
      </geometry>
      <material name="orange" />
    </visual>
    <collision>
      <!--real_chassis_link_.Body_bbox-->
      <origin xyz="0.090073 5.25 3.35026" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <box size="7.6383887394832115 10.500000000000005 4.84423459552541"/>
      </geometry>
      <gazebo>
        <mu>0.1</mu>
      </gazebo>
    </collision>
    <xacro:box_inertial_with_origin x="8" y="10" z="3" mass="100000">
      <origin xyz="0 5 0" rpy="0 0 0" />
    </xacro:box_inertial_with_origin>
  </link>
  <link name="tray_link">
    <visual>
      <!--Tray/Body002.-->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <mesh filename="package://haul_truck/meshes/Unnamed_Body002.dae"/>
      </geometry>
      <material name="red" />
    </visual>
    <collision>
      <!--real_tray_link_.Body002_bbox-->
      <origin xyz="0.219 7.17182 5.93052" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <box size="7.638000000000004 13.858283829000012 3.4610417480000075"/>
      </geometry>
      <gazebo>
        <mu>0.1</mu>
      </gazebo>
    </collision>
    <xacro:box_inertial_with_origin x="8" y="10" z="1" mass="10000">
      <origin xyz="0 -5 0" rpy="0 0 0" />
    </xacro:box_inertial_with_origin>
  </link>
  <link name="front_left_wheel_link">
    <visual>
      <!--Wheel/Body001.-->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <mesh filename="package://haul_truck/meshes/Unnamed_Body001.dae"/>
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <!--Wheel/Body001.-->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <mesh filename="package://haul_truck/meshes/Unnamed_Body001.dae"/>
      </geometry>
    </collision>
    <xacro:sphere_inertial radius="1" mass="2000" />
    <gazebo>
      <mu>0.3</mu>
      <minDepth>0.02</minDepth>
    </gazebo>
  </link>
  <link name="front_right_wheel_link">
    <visual>
      <!--Wheel/Body001.-->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <mesh filename="package://haul_truck/meshes/Unnamed_Body001.dae"/>
      </geometry>
      <material name="black" />

    </visual>
    <collision>
      <!--Wheel/Body001.-->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <mesh filename="package://haul_truck/meshes/Unnamed_Body001.dae"/>
      </geometry>
      <gazebo>
        <mu>0.3</mu>
        <minDepth>0.02</minDepth>
      </gazebo>
    </collision>
    <xacro:sphere_inertial radius="1" mass="2000" />

  </link>
  <link name="rear_left_wheel_link">
    <visual>
      <!--Wheel/Body001.-->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <mesh filename="package://haul_truck/meshes/Unnamed_Body001.dae"/>
      </geometry>
      <material name="black" />

    </visual>
    <collision>
      <!--Wheel/Body001.-->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <mesh filename="package://haul_truck/meshes/Unnamed_Body001.dae"/>
      </geometry>
      <gazebo>
        <mu>0.3</mu>
        <minDepth>0.02</minDepth>
      </gazebo>
    </collision>
    <xacro:sphere_inertial radius="1" mass="2000" />

  </link>
  <link name="rear_right_wheel_link">
    <visual>
      <!--Wheel/Body001.-->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <mesh filename="package://haul_truck/meshes/Unnamed_Body001.dae"/>
      </geometry>
      <material name="black" />

    </visual>
    <collision>
      <!--Wheel/Body001.-->
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <geometry>
        <mesh filename="package://haul_truck/meshes/Unnamed_Body001.dae"/>
      </geometry>
      <gazebo>
        <mu>0.3</mu>
        <minDepth>0.02</minDepth>
      </gazebo>
    </collision>
    <xacro:sphere_inertial radius="1" mass="2000" />

  </link>
  <joint name="tray_joint" type="fixed">
    <parent link="chassis_link"/>
    <child link="tray_link"/>
    <origin xyz="-3.6 0.1 4.2" rpy="0.0 -0.0 0.0"/>
  </joint>
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="front_left_wheel_link"/>
    <origin xyz="2.8 3.2 0.0" rpy="0.0 -0.0 0.0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="front_right_wheel_link"/>
    <origin xyz="-4.0 3.2 0.0" rpy="0.0 -0.0 0.0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="rear_left_wheel_link"/>
    <origin xyz="2.8 9.3 0.0" rpy="0.0 -0.0 0.0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="rear_right_wheel_link"/>
    <origin xyz="-4.0 9.3 0.0" rpy="0.0 -0.0 0.0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <xacro:include filename="$(find haul_truck)/worlds_and_models/haul_truck/lidar_3d_v1.urdf.xacro" />

  <gazebo>
    <plugin filename="ignition-gazebo-sensors-system" name="ignition::gazebo::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
  </gazebo>


  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>ign_ros2_control/IgnitionSystem</plugin>
    </hardware>
    <joint name="front_left_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="front_right_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="rear_left_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="rear_right_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo>
    <!-- Joint state publisher -->
    <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
      <parameters>$(find haul_truck)/config/diffdrive_control.yaml</parameters>
    </plugin>
  </gazebo>

</robot>
