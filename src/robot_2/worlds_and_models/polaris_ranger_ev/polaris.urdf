<?xml version='1.0' encoding='utf-8'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="polaris">
    <link name="chassis">

        <visual name="visual">
            <!-- rotate mesh to get to X-forward -->
            <origin xyz="0 0 0" rpy="0 0 -1.570796" />
            <geometry>
                <mesh>
                    <uri>file://$(find robot_2)/polaris_ranger_ev/meshes/polaris.dae</uri>
                    <submesh>
                        <name>Ranger</name>
                        <center>false</center>
                    </submesh>
                </mesh>
            </geometry>
        </visual>
    </link>
    <link name="rear_right_wheel">
        <origin xyz="-0.85 -0.6 0.32" rpy="1.52 0.0 0.0" />

    </link>
    <link name="rear_left_wheel">
        <origin xyz="-0.85 0.6 0.32" rpy="-1.52 0.0 0.0" />


        <visual name="visual">
            <!-- rotate mesh to get to X-forward -->
            <origin xyz="0 0 0" rpy="0 -1.570796 0" />
            <geometry>
                <mesh>
                    <uri>file://$(find robot_2)/polaris_ranger_ev/meshes/polaris.dae</uri>
                    <submesh>
                        <name>Rear_Wheel_Left</name>
                        <center>true</center>
                    </submesh>
                </mesh>
            </geometry>
        </visual>
    </link>
    <link name="front_right_wheel">
        <origin xyz="1.03 -0.6 0.32" rpy="1.52 0.0 0.0" />


        <visual name="visual">
            <origin xyz="0 0 0" rpy="0 -1.570796 0"/>
            <geometry>
                <mesh>
                    <uri>file://$(find robot_2)/polaris_ranger_ev/meshes/polaris.dae</uri>
                    <submesh>
                        <name>Front_Wheel_Right</name>
                        <center>true</center>
                    </submesh>
                </mesh>
            </geometry>
        </visual>
    </link>
    <link name="front_right_wheel_steering_block">
        <origin xyz="1.03 -0.5 0.32" rpy="1.570796 0.0 0.0"/>

    </link>
    <link name="front_left_wheel">
        <origin xyz="1.03 0.6 0.32" rpy="-1.52 0.0 0.0" />

        <visual name="visual">
            <pose>0 0 0 3.14159 1.570796 0</pose>
            <geometry>
                <mesh>
                    <uri>file://$(find robot_2)/polaris_ranger_ev/meshes/polaris.dae</uri>
                    <submesh>
                        <name>Front_Wheel_Left</name>
                        <center>true</center>
                    </submesh>
                </mesh>
            </geometry>
        </visual>
    </link>
    <link name="front_left_wheel_steering_block">
        <origin xyz="1.03 0.5 0.32" rpy="1.570796 0.0 0.0"/>
    </link>

    <joint type="revolute" name="front_left_steering_joint">
        <child link="front_left_wheel_steering_block"/>
        <parent link="chassis"/>
        <axis xyz="0 0 1"/>

    </joint>
    <joint type="revolute" name="front_left_wheel_joint">
        <child link="front_left_wheel"/>
        <parent link="front_left_wheel_steering_block"/>
        <axis xyz="0 1 0.05" />
    </axis>
</joint>
<joint type="revolute" name="front_right_steering_joint">
    <child link="front_right_wheel_steering_block"/>
    <parent link="chassis"/>
    <axis xyz="0 0 1" />

</joint>
<joint type="revolute" name="front_right_wheel_joint">
    <child link="front_right_wheel"/>
    <parent link="front_right_wheel_steering_block"/>
    <axis xyz="0 1 -0.05" />
</joint>
<joint type="revolute" name="rear_left_wheel_joint">
    <child link="rear_left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0.05" />
</joint>
<joint type="revolute" name="rear_right_wheel_joint">
    <pose>0.0 0.0 -0.1 0 0 0</pose>
    <child link="rear_right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 -0.05" />
</joint>
<joint type="revolute" name="rear_differential_joint">
    <child link="rear_right_wheel"/>
    <parent link="rear_left_wheel"/>
    <axis xyz="0 1 0" />
</joint>
</robot>
